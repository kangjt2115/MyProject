<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <title>title</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../css/aui.css" />
    <link rel="stylesheet" type="text/css" href="../css/employeeTrain_newMan.css" />
</head>

<body>
    <header class="aui-bar aui-bar-nav headercol" id="header">
        <div class="aui-pull-left aui-btn">
            <span class="aui-iconfont aui-icon-left" id="left"></span>
        </div>
        <div class="aui-title titlecol">新人培训</div>
    </header>
    <div class="jiange"></div>

    <!-- 列表 -->
    <div class="list_frame">
      <span>一、公司文化</span>
      <span class="list_ok">已完成</span>
    </div>
    <div class="list_frame" onclick="goDetail()">
      <span>二、正确着装</span>
      <span class="list_no">未完成</span>
    </div>
    <div class="list_frame" onclick="goDetail()">
      <span>三、礼貌用语</span>
      <span class="list_no">未完成</span>
    </div>
    <div class="list_frame list_bottom" onclick="goDetail()">
      <span>四、卫生习惯</span>
      <span class="list_no">未完成</span>
    </div>

    <!-- 申请考核 -->
    <div class="submit" onclick="ok_submit()">
      <span>申请考核</span>
    </div>

</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/jquery-1.11.0.min.js"></script>
<script type="text/javascript" src="../../script/aui-toast.js" ></script>
<script type="text/javascript">
    apiready = function() {
      closeWin();
        var head=$api.byId("header");
        $api.fixStatusBar(head);
        api.parseTapmode();
        
        var user = $api.getStorage('user');
		if(user.font_size=='normal'){
			$('html').css("font-size","125%");
		}else if(user.font_size=='big'){
			$('html').css("font-size","156.25%");
		}
        
        api.addEventListener({
	        name: 'Font_normal'
	    }, function(ret, err) {
	        $('html').css("font-size","125%");
	    });
	    api.addEventListener({
	        name: 'Font_big'
	    }, function(ret, err) {
	        $('html').css("font-size","156.25%");
	    });
    };
    
    var toast = new auiToast({
    })

    function  goDetail(){
      api.openWin({
          name: 'employeeTrain_details_header',
          url: './employeeTrain_details_header.html',
          pageParam: {
              name: 'test'
          }
      });
    }

    function ok_submit(){
      toast.success({
          title:"提交成功",
          duration:2000
      });
    }
    function closeWin(){
  		$('#left').on("click",function(){
  			api.closeWin();
  		})
  	}
</script>

</html>
