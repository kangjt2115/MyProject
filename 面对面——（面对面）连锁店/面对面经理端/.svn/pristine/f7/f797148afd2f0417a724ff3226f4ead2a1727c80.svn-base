* {
    margin: 0;
    padding: 0;
}
html {
    background-color: #f2f2f2;
}
.headercol {
  background-color: #fefefe;
}
.titlecol {
    color: black;
    font-weight: normal;;
}
.tag{
	font-size: 12px;
	color:#656565;
	padding: 0.75rem 0.75rem 0 0.75rem;
	background: #f2f2f2;
}

#today {
  margin-left: 1.25rem;
  margin-right: 0;
  border: none;
  font-size: 20px;
  color: white;
  line-height: 2rem;
  width: 8.5rem;
  height: 2rem;
  background-color: #FDA340;
}
#tomorrow {
  border: 5px;
  border-color: #FDA340;
  font-size: 20px;
  line-height: 2rem;
  width: 8.5rem;
  height: 2rem;
  background-color: #fefefe;
}
.time_bar {
  background-color: #f2f2f2;
  width: auto;
  height: 4rem;
  margin-bottom: 0.5rem;
}
.time {
  margin-left: 0.5rem;
  color: #989898;
  font-size: 14px;
}
.line {
  vertical-align: middle;
  width: 21em;
  height: 1px;
  background-color: #989898;
}
.employee_info {
  position: absolute;
  border-radius: 6px;
  width: 16rem;
  height: 3rem;
  background-color: white;
  margin-left: 3rem;
}
.yingdao {
  position: relative;
  left: 1.5rem;
  top:0.9rem;
}
.renshu {
  position: relative;
  left: 3.5rem;
  top: 0.9rem;
}
.xiangqing {
  position: relative;
  left: 8rem;
  top: 0.9rem;
}
.right {
  position: relative;
  left: 8rem;
  top: 0.9rem;
}
