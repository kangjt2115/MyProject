html{
	width: 100%;
	height: 100%;
}
body {
	background:#f2f2f2;
	width: 100%;
	height: 100%;
}
#header{
	background: #FFFFFF;
	color: #282828;
	line-height: 2.2rem;
}
#left{
	color: #282828;
}
.titlecol{
	font-size: 0.85rem;
	font-family: "微软雅黑";
	font-weight: bold;
	text-align: center;
}
.Sub{
	color:#2b2b2b;
	position: relative;
}
.classify{
	display:none;
	width: 5.75rem;
	height: 4rem;
	position: absolute;
	background:#fff;
	top: 2.2rem;
	right: 0.1rem;
	border-radius: 5px;
	box-shadow: 2px 2px 5px #888888;
}
.week{
	width: 100%;
	height: 2rem;
	line-height: 2rem;
	text-align: center;
	color:#989898;
	font-size: 0.7rem;
	font-family: "微软雅黑";
	border-bottom: 1px solid #f2f2f2;
}
.orange{
	color: #FDA340;
}
.mouth{
	width: 100%;
	height: 2rem;
	line-height: 2rem;
	text-align: center;
	color:#989898;
	font-size: 0.7rem;
	font-family: "微软雅黑";
}
.Work_Hour{
	width: 100%;
	height: 2.5rem;
	padding: 0 0.75rem;
	background: #fff;
	margin-top: 1rem;
	margin-bottom: 0.5rem;
	font-size: 0.7rem;
	font-family: "微软雅黑";
	line-height: 2.5rem;
}
.plan_wages{
	width: 100%;
	height: 2.5rem;
	padding: 0 0.75rem;
	background: #fff;
	margin-bottom: 0.5rem;
	font-size: 0.7rem;
	font-family: "微软雅黑";
	line-height: 2.5rem;
}
.true_wages{
	width: 100%;
	height: 2.5rem;
	padding: 0 0.75rem;
	background: #fff;
	font-size: 0.7rem;
	font-family: "微软雅黑";
	line-height: 2.5rem;
}
.right{
	float: right;
}
.left{
	float: left;
}
.span_detail{
	font-size: 0.6rem;
	font-family: "微软雅黑";
	margin: 0.25rem 0.75rem;
	color:#686868;
}
.wages_detail{
	width: 100%;
	height: 2.5rem;
	background: #fff;
	line-height:2.5rem;
	padding:0 0.75rem;
}
.gray{
	background: #F9F9F9;
}
.time{
	display:block;
	width: 25%;
	font-size: 0.8rem;
	font-family: "微软雅黑";
	float:left;
	color:#2B2B2B;
}
.area{
	display:block;
	width: 30%;
	font-size: 0.8rem;
	font-family: "微软雅黑";
	text-align: center;
	float:left;
	color:#2B2B2B;
}
.reason_Late{
	display:block;
	width: 20%;
	font-size: 0.8rem;
	font-family: "微软雅黑";
	text-align: center;
	float:left;
	color: #FF0033;
}
.reason_Leave{
	display:block;
	width: 20%;
	font-size: 0.8rem;
	font-family: "微软雅黑";
	text-align: center;
	float:left;
	color: #00CC33;
}
.reason_Absenteeism{
	display:block;
	width: 20%;
	font-size: 0.8rem;
	font-family: "微软雅黑";
	text-align: center;
	float:left;
	color: #0066FF;
}
.reason_Change{
	display:block;
	width: 20%;
	font-size: 0.8rem;
	font-family: "微软雅黑";
	text-align: center;
	float:left;
	color: #9933FF;
}
.amount{
	display:block;
	width: 25%;
	font-size: 0.8rem;
	font-family: "微软雅黑";
	text-align: right;
	float:left;
	color:#2B2B2B;
}
.hide{
	display:block;
}