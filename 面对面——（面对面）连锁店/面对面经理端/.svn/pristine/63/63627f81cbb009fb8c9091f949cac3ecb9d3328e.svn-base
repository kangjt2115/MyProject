* {
  margin: 0;
  padding: 0;
}
html {
    background-color: #f2f2f2;
}
.btn_top {
  padding-left: 1.25rem;
  padding-bottom: 0.5rem;
  padding-top: 0.5rem;
  width: 22rem;
  height: auto;
  background-color: #f2f2f2;
  position: fixed;
  z-index: 100;
}
.headercol {
  background-color: #fefefe;
}
.titlecol {
    color: black;
    font-weight: normal;
}
.tag{
	color:#656565;
	padding: 0.75rem 0.75rem 0 0.75rem;
	background: #f2f2f2;
}
.time_btn {
  border: 1px solid #fda340;
  color: #FDA340;
  font-size: 20px;
  line-height: 2rem;
  width: 8.5rem;
  height: 2rem;
  background-color: #fefefe;
}
.active {
  border: none;
  font-size: 20px;
  color: white;
  line-height: 2rem;
  width: 8.5rem;
  height: 2rem;
  background-color: #FDA340;
}
