.time_bar {
  background-color: #f2f2f2;
  width: auto;
  height: 4rem;
  margin-bottom: 0.5rem;
}
.time {
  margin-left: 0.5rem;
  color: #989898;
  font-size: 14px;
}
.line {
  vertical-align: middle;
  width: 21em;
  height: 1px;
  background-color: #e6e6e6;
}
.employee_info {
  position: absolute;
  border-radius: 6px;
  width: 16rem;
  height: 3rem;
  background-color: white;
  margin-left: 3rem;
}
.yingdao {
  position: relative;
  left: 1.5rem;
  top:0.9rem;
}
.renshu {
  position: relative;
